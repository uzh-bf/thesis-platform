{
  "name": "@uzh-bf/thesis-platform",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "npm-run-all build:nexus build:graphql build:next",
    "build:nexus": "ts-node --esm --transpile-only -P tsconfig.nexus.json src/pages/api/graphql.ts",
    "build:graphql": "graphql-codegen --config codegen.ts",
    "build:next": "next build",
    "dev": "npm-run-all --parallel dev:generate dev:next",
    "dev:generate": "graphql-codegen --config codegen.ts --watch",
    "dev:next": "next dev",
    "format": "prettier --write .",
    "lint": "next lint",
    "predev": "npm run prisma:generate build:nexus",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:reset": "prisma migrate reset",
    "prisma": "studio",
    "seed": "ts-node --esm prisma/seed.ts",
    "start": "next start"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "1.0.5",
    "@prisma/client": "4.4.0",
    "@uzh-bf/design-system": "0.0.54",
    "graphql": "16.6.0",
    "graphql-yoga": "3.0.0-next.4",
    "jsonwebtoken": "8.5.1",
    "next": "12.3.1",
    "next-auth": "4.13.0",
    "nexus": "1.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "1.6.1",
    "urql": "3.0.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.6",
    "@graphql-codegen/fragment-matcher": "3.3.1",
    "@graphql-codegen/introspection": "2.2.1",
    "@graphql-codegen/typed-document-node": "2.3.4",
    "@graphql-codegen/typescript": "2.7.4",
    "@graphql-codegen/typescript-operations": "2.5.4",
    "@graphql-codegen/typescript-resolvers": "2.7.4",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/forms": "0.5.3",
    "@tailwindcss/line-clamp": "0.4.2",
    "@tailwindcss/typography": "0.5.7",
    "@tsconfig/node18": "1.0.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.8.4",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "10.4.12",
    "eslint": "8.25.0",
    "eslint-config-next": "12.3.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.17",
    "prettier-plugin-organize-imports": "3.1.1",
    "prisma": "4.4.0",
    "tailwindcss": "3.1.8",
    "tailwindcss-radix": "2.6.0",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "volta": {
    "node": "18.10.0"
  },
  "prisma": {
    "seed": "npm run seed"
  }
}
